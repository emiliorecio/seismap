    <version>0.0.1-SNAPSHOT</version>
    <profiles>
        <profile>
            <id>seismap-port-not-set</id>
            <activation>
                <property>
                    <name>!env.SEISMAP_PORT</name>
                </property>
            </activation>
            <properties>
                <seismap.port>7000</seismap.port>
            </properties>
        </profile>
        <profile>
            <id>seismap-port-set</id>
            <activation>
                <property>
                    <name>env.SEISMAP_PORT</name>
                </property>
            </activation>
            <properties>
                <seismap.port>${env.SEISMAP_PORT}</seismap.port>
            </properties>
        </profile>
        <profile>
            <id>seismap-stop-port-not-set</id>
            <activation>
                <property>
                    <name>!env.SEISMAP_STOP_PORT</name>
                </property>
            </activation>
            <properties>
                <seismap.stop.port>7001</seismap.stop.port>
            </properties>
        </profile>
        <profile>
            <id>seismap-stop-port-set</id>
            <activation>
                <property>
                    <name>env.SEISMAP_STOP_PORT</name>
                </property>
            </activation>
            <properties>
                <seismap.stop.port>${env.SEISMAP_STOP_PORT}</seismap.stop.port>
            </properties>
        </profile>
    </profiles>
